{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MoveMint Ledger Schema",
  "version": "1.0.0",
  "description": "Schema for MoveMint Ledger API v1.0.0",
  "type": "object",
  "definitions": {
    "LedgerEntry": {
      "type": "object",
      "required": ["type", "amount", "timestamp", "id"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the ledger entry"
        },
        "type": {
          "type": "string",
          "description": "Type of ledger entry (e.g., 'deposit', 'withdrawal', 'transfer')"
        },
        "amount": {
          "type": "number",
          "description": "Transaction amount"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of the entry"
        }
      }
    },
    "LedgerResponse": {
      "type": "object",
      "required": ["schemaVersion", "entries"],
      "properties": {
        "schemaVersion": {
          "type": "string",
          "const": "1.0.0",
          "description": "Schema version for tracking evolution"
        },
        "entries": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/LedgerEntry"
          },
          "description": "Array of ledger entries, sorted by timestamp"
        }
      }
    },
    "PostLedgerRequest": {
      "type": "object",
      "required": ["type", "amount"],
      "properties": {
        "type": {
          "type": "string",
          "description": "Type of ledger entry"
        },
        "amount": {
          "type": "number",
          "description": "Transaction amount"
        }
      }
    },
    "PostLedgerResponse": {
      "type": "object",
      "required": ["schemaVersion", "entry"],
      "properties": {
        "schemaVersion": {
          "type": "string",
          "const": "1.0.0",
          "description": "Schema version for tracking evolution"
        },
        "entry": {
          "$ref": "#/definitions/LedgerEntry"
        }
      }
    }
  }
}
